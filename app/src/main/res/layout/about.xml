<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backend">

    <include layout="@layout/toolbar" android:id="@+id/toolBar"/>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/TableRow03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25">

                <RelativeLayout
                    android:id="@+id/RelativeLayout08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/Novel1"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/noa"
                        android:onClick="onClick">

                    </ImageView>
                        <CheckBox
                            android:id="@+id/favbutton1"
                            style="?android:attr/starStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/Novel3"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="30dp" />
                            <ImageView
                            android:id="@+id/Novel2"
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/nob"
                            android:onClick="onClick">

                        </ImageView>
                        <CheckBox
                            android:id="@+id/favbutton2"
                            style="?android:attr/starStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/Novel2"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp" />



</LinearLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/TableRow06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75">

                <RelativeLayout
                    android:id="@+id/RelativeLayout10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/Novel3"
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/noc"
                            android:onClick="onClick">

                        </ImageView>
                        <CheckBox
                            android:id="@+id/favbutton3"
                            style="?android:attr/starStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/Novel3"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="100dp" />


                        <ImageView
                            android:id="@+id/Novel4"
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/i" />



                        <CheckBox
                            android:id="@+id/favbutto4"
                            style="?android:attr/starStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/Novel4"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="100dp" />

                    </LinearLayout>
                </RelativeLayout>
            </TableRow>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".about_novel"
                tools:ignore="MergeRootFrame" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>